<%= render 'shared/errors', obj: @category %>
<%= form_with(model: @category, local: true) do |f| %>
  <div class="form-group row mb-3">
    <%= f.label :name, "Category name", class: "col-2 col-form-label" %>
    <div class="col-10">
      <%= f.text_field :name, class: "form-control", placeholder: "Enter a name" %>
    </div>
  </div>
  <div class="form-group col-2 mx-auto mb-3">
    <%= f.submit class: "btn btn-outline-secondary  btn-lg" %>
  </div>
<% end %>