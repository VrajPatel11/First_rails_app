<h1 class="text-center mt-4">Create a new category</h1>
<div class="container">
    <div class="row justify-content-center">
    <%= render 'shared/errors', obj: @category %>
        <div class="col-10">
            <%= form_with(model: @category, local: true) do |f| %>
                <div class="form-group row mb-3">
                    <%= f.label :name, "Category name", class: "col-2 col-form-label" %>
                    <div class="col-10">
                        <%= f.text_field :name, class: "form-control", placeholder: "Enter a name" %>
                    </div>
                </div>

                <div class="form-group col-2 mx-auto mb-3">
                    <%= f.submit class: "btn btn-outline-secondary  btn-lg" %>
                </div>
                <% end %>
        </div>
        <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-info" %>
    </div>
</div>
