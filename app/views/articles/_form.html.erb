<div class="container">
    <div class="row justify-content-center">
    <%= render 'shared/errors', obj: @article %>
        <div class="col-10">
            <%= form_with(model: @article, local: true) do |f| %>
                <div class="form-group row mb-3">
                    <%= f.label :title, class: "col-2 col-form-label" %>
                    <div class="col-10">
                        <%= f.text_field :title, class: "form-control", placeholder: "Title of the article" %>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <%= f.label :description, class: "col-2 col-form-label" %>
                    <div class="col-10">
                        <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Description of the article" %>
                    </div>
                </div>

                <div class="form-group col-2 mx-auto mb-3">
                    <%= f.submit class: "btn btn-outline-secondary  btn-lg" %>
                </div>
                <% end %>
        </div>
        <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-info" %>
    </div>
</div>