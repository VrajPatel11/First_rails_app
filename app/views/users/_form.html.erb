<div class="container">
    <div class="row justify-content-center">
    <%= render 'shared/errors', obj: @user %>
        <div class="col-10">
            <%= form_with(model: @user, local: true) do |f| %>
                <div class="form-group row mb-3">
                    <%= f.label :username, class: "col-2 col-form-label" %>
                    <div class="col-10">
                        <%= f.text_field :username, class: "form-control", placeholder: "Enter a username" %>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <%= f.label :email, class: "col-2 col-form-label" %>
                    <div class="col-10">
                        <%= f.email_field :email, class: "form-control", placeholder: "Enter your email id" %>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <%= f.label :password, class: "col-2 col-form-label" %>
                    <div class="col-10">
                        <%= f.password_field :password, class: "form-control", placeholder: "Enter a password" %>
                    </div>
                </div>

                <div class="form-group col-2 mx-auto mb-3">
                    <%= f.submit(@user.new_record? ? "Sign Up" : "Update Account", class: "btn btn-outline-secondary  btn-lg") %>
                </div>
                <% end %>
        </div>
        <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-info" %>
    </div>
</div>